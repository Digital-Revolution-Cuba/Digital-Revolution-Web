---
/**
 * ConcursoCard Component
 * Tarjeta para mostrar concursos activos con fecha como badge
 */

export interface Props {
  title: string;
  date: string;
  imageUrl: string;
  altText: string;
  ctaLink: string;
  ctaText: string;
}

const { title, date, imageUrl, altText, ctaLink, ctaText } = Astro.props;
---

<article
  class="group bg-brand-dark flex h-full w-full max-w-[320px] flex-col overflow-hidden rounded-2xl shadow-lg transition-all duration-300 hover:-translate-y-1 hover:shadow-2xl"
>
  <!-- Imagen -->
  <div class="relative h-40 overflow-hidden sm:h-48">
    <img
      src={imageUrl}
      alt={altText}
      loading="lazy"
      class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-105"
    />
  </div>

  <!-- Contenido -->
  <div class="flex flex-1 flex-col justify-between gap-3 p-6">
    <h3 class="font-roboto line-clamp-2 text-sm leading-6 font-bold text-white sm:text-lg">
      {title}
    </h3>

    <div class="mt-auto flex items-start justify-between gap-2">
      <!-- Fecha -->
      <span class="text-accent-orange bg-accent-orange/20 rounded-lg p-2 text-center text-xs">
        {date}
      </span>

      <!-- CTA -->
      <a href={ctaLink} class="btn-primary px-4 text-center">
        {ctaText}
      </a>
    </div>
  </div>
</article>

<style>
  /* Ensure the card always fills its .card-item-concursos wrapper.
     The wrapper controls the responsive width; the card must not cap itself. */
  article {
    width: 100%;
    max-width: 100%;
    box-sizing: border-box;
  }
</style>
