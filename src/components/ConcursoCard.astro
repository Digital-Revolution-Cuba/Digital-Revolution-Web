---
/**
 * ConcursoCard Component
 * Tarjeta para mostrar concursos activos con fecha como badge
 */

export interface Props {
  title: string;
  date: string;
  imageUrl: string;
  altText: string;
  ctaLink: string;
  ctaText: string;
}

const { title, date, imageUrl, altText, ctaLink, ctaText } = Astro.props;
---

<article
  class="group bg-brand-dark flex w-full h-full max-w-[320px] flex-col overflow-hidden rounded-2xl shadow-lg transition-all duration-300 hover:-translate-y-1 hover:shadow-2xl"
>
  <!-- Imagen -->
  <div class="relative h-40 overflow-hidden sm:h-48">
    <img
      src={imageUrl}
      alt={altText}
      loading="lazy"
      class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-105"
    />
  </div>

  <!-- Contenido -->
  <div class="flex flex-col justify-between flex-1 gap-3 p-6">
    <h3
      class="line-clamp-2 font-roboto font-bold leading-6 text-sm text-white sm:text-lg"
    >
      {title}
    </h3>

    <div class="mt-auto flex items-start justify-between gap-2">
      <!-- Fecha -->
      <span
        class="text-accent-orange rounded-lg text-xs p-2  bg-accent-orange/20"
      >
        {date}
      </span>

      <!-- CTA -->
      <a
        href={ctaLink}
        class="btn-primary px-4"
      >
        {ctaText}
      </a>
    </div>
  </div>
</article>

<style>
  /* Ensure the card always fills its .card-item-concursos wrapper.
     The wrapper controls the responsive width; the card must not cap itself. */
  article {
    width: 100%;
    max-width: 100%;
    box-sizing: border-box;
  }
</style>
