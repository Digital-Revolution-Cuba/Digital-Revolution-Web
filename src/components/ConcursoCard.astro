---
/**
 * ConcursoCard Component
 * Tarjeta para mostrar concursos activos con fecha como badge
 */

export interface Props {
  title: string;
  date: string;
  imageUrl: string;
  altText: string;
  ctaLink: string;
  ctaText: string;
}

const { title, date, imageUrl, altText, ctaLink, ctaText } = Astro.props;
---

<article class="concurso-card">
  <div class="concurso-image-wrapper">
    <img src={imageUrl} alt={altText} class="concurso-image" loading="lazy" />
  </div>

  <div class="concurso-content">
    <h3 class="concurso-title">{title}</h3>
    <div class="concurso-footer">
      <span class="concurso-date">{date}</span>
      <a href={ctaLink} class="concurso-cta">
        {ctaText}
      </a>
    </div>
  </div>
</article>

<style>
  .concurso-card {
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    width: 100%;
    max-width: 320px;
    background: var(--palette-brand-dark, #011822);
    border-radius: 1rem;
    overflow: hidden;
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
  }

  .concurso-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 30px rgba(0, 0, 0, 0.4);
  }

  .concurso-image-wrapper {
    width: 100%;
    height: 200px;
    overflow: hidden;
  }

  .concurso-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .concurso-card:hover .concurso-image {
    transform: scale(1.05);
  }

  .concurso-content {
    padding: 1rem;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .concurso-title {
    color: #ffffff;
    font-size: 1.125rem;
    font-weight: 600;
    margin: 0;
    line-height: 1.3;
  }

  .concurso-footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 0.5rem;
  }

  .concurso-date {
    background: rgba(244, 150, 36, 0.2);
    color: var(--palette-accent-orange, #f49624);
    font-size: 0.75rem;
    font-weight: 500;
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    white-space: nowrap;
  }

  .concurso-cta {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.5rem 1rem;
    background: transparent;
    border: 2px solid var(--palette-accent-orange, #f49624);
    border-radius: 0.5rem;
    color: var(--palette-accent-orange, #f49624);
    font-size: 0.875rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .concurso-cta:hover {
    background: var(--palette-accent-orange, #f49624);
    color: var(--palette-brand-dark, #011822);
  }

  /* Responsive sizing */
  @media (max-width: 640px) {
    .concurso-card {
      width: calc(100vw - 80px);
      max-width: 280px;
    }
    .concurso-image-wrapper {
      height: 160px;
    }
    .concurso-title {
      font-size: 1rem;
    }
  }

  @media (min-width: 641px) and (max-width: 768px) {
    .concurso-card {
      width: calc((100vw - 100px) / 2);
      max-width: 300px;
    }
  }

  @media (min-width: 769px) and (max-width: 1023px) {
    .concurso-card {
      width: calc((100vw - 120px) / 3);
      max-width: 320px;
    }
  }

  @media (min-width: 1024px) {
    .concurso-card {
      width: 320px;
    }
  }
</style>
