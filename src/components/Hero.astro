---
import '../styles/glass-card.css';
import Accordeon from '../components/AccordeonSlider.astro';
---

<section
  class="lg:-8 relative flex h-[100vh] w-full items-center justify-center overflow-hidden bg-gray-950 px-4 text-left text-black sm:px-9"
>
  <div class="z-10 -mt-20 flex w-full gap-8 px-8">
    <div class="flex w-1/2 flex-col justify-center text-white">
      <h1 class="font text-6xl">Descubre Talentos</h1>
      <p class="mt-4 text-3xl text-gray-300">
        Encuentra y conecta con personas creativas <br />de diversas disciplinas
      </p>
      <button
        class="mt-6 rounded-lg border-1 border-gray-700 bg-gray-800 px-6 py-3 text-lg text-white"
      >
        Explora Talentos
      </button>
    </div>
    <Accordeon />
  </div>
</section>
