---
export interface Props {
  skew?: 'T' | 'F';
  zIndex?: number;
  divBg?: string;
  sectionBg?: string;
}
const {
  skew = 'T',
  zIndex = 0,
  divBg = '#46ecd5',
  sectionBg = '#46ecd5',
} = Astro.props;
const skewAngle = skew === 'T' ? '-4deg' : '4deg';
---

<section style={`background: ${sectionBg}`}>
  <div
    class="skewed"
    style={`background: ${divBg}; z-index: ${zIndex}; transform: skewY(${skewAngle});`}
  >
  </div>
</section>

<style>
  .skewed {
    position: relative;
    top: 0;
    bottom: 0;
    right: 0;
    left: 0;
    width: 100%;
    height: 100px;
    /* background, z-index, transform via inline style */
    transform-origin: top left;
  }
  section {
    /* background via inline style */
  }
</style>
