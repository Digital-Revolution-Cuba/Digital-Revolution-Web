---
/**
 * Hero section for the Concursos (Contests) page
 * Displays a prominent header with statistics and decorative elements
 */

interface Props {
  activeCount: number;
  totalParticipants: number;
  totalPrizes: string | number;
}

const { activeCount, totalParticipants, totalPrizes } = Astro.props;
---

<section class="concursos-hero" aria-labelledby="hero-heading">
  <div class="hero-container">
    <div class="hero-content">
      <!-- Badge -->
      <div class="hero-badge" role="img" aria-label="Concursos Creativos">
        <svg
          width="20"
          height="20"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          aria-hidden="true"
        >
          <path
            d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"
          ></path>
        </svg>
        <span>Concursos Creativos</span>
      </div>

      <!-- Main heading -->
      <h1 id="hero-heading" class="hero-title">
        Desafía tu <span class="gradient-text">creatividad</span>
      </h1>

      <!-- Description -->
      <p class="hero-description">
        Participa en concursos de fotografía, música, arte digital y más.
        Muestra tu talento, gana premios increíbles y forma parte de nuestra
        comunidad creativa.
      </p>

      <!-- Statistics -->
      <div
        class="hero-stats"
        role="group"
        aria-label="Estadísticas de concursos"
      >
        <div class="stat-item">
          <span
            class="stat-number"
            aria-label={`${activeCount} concursos activos`}
          >
            {activeCount}
          </span>
          <span class="stat-label">Concursos Activos</span>
        </div>

        <div class="stat-divider" aria-hidden="true"></div>

        <div class="stat-item">
          <span
            class="stat-number"
            aria-label={`${totalParticipants} participantes`}
          >
            {totalParticipants}+
          </span>
          <span class="stat-label">Participantes</span>
        </div>

        <div class="stat-divider" aria-hidden="true"></div>

        <div class="stat-item">
          <span class="stat-number" aria-label={`${totalPrizes} en premios`}>
            {totalPrizes}
          </span>
          <span class="stat-label">En Premios</span>
        </div>
      </div>

      <!-- Skip link for accessibility -->
      <a href="#concursos-filters" class="skip-link">
        Ir a filtros de concursos
      </a>
    </div>

    <!-- Decorative elements -->
    <div class="hero-decoration" aria-hidden="true">
      <div class="deco-circle deco-circle-1"></div>
      <div class="deco-circle deco-circle-2"></div>
      <div class="deco-circle deco-circle-3"></div>
    </div>
  </div>
</section>

<style>
  .concursos-hero {
    position: relative;
    min-height: 70vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background: linear-gradient(
      180deg,
      var(--palette-background) 0%,
      rgba(var(--palette-brand-navy-rgb), 0.3) 100%
    );
  }

  .hero-container {
    position: relative;
    max-width: 1200px;
    width: 100%;
    margin: 0 auto;
    padding: 80px 24px;
    z-index: 1;
  }

  .hero-content {
    text-align: center;
    animation: fadeInUp 1s ease-out;
  }

  /* Badge */
  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 8px 20px;
    background: rgba(var(--palette-accent-cyan-rgb), 0.1);
    border: 1px solid rgba(var(--palette-accent-cyan-rgb), 0.3);
    border-radius: 50px;
    color: var(--palette-accent-cyan);
    font-size: 0.875rem;
    font-weight: 600;
    font-family: var(--font-barlow);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 32px;
    animation: fadeInDown 0.8s ease-out;
  }

  .hero-badge svg {
    animation: spin 3s linear infinite;
  }

  @keyframes spin {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  /* Title */
  .hero-title {
    font-size: clamp(2.5rem, 8vw, 4.5rem);
    font-weight: 900;
    font-family: var(--font-saira);
    color: #fff;
    line-height: 1.1;
    margin: 0 0 24px;
  }

  .gradient-text {
    background: linear-gradient(
      135deg,
      var(--palette-accent-cyan),
      var(--palette-accent-purple),
      var(--palette-accent-orange)
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: gradientShift 5s ease infinite;
    background-size: 200% 200%;
  }

  @keyframes gradientShift {
    0%,
    100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  /* Description */
  .hero-description {
    font-size: 1.125rem;
    color: rgba(255, 255, 255, 0.8);
    max-width: 700px;
    margin: 0 auto 48px;
    line-height: 1.7;
    font-family: var(--font-rubik);
  }

  /* Statistics */
  .hero-stats {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 40px;
    flex-wrap: wrap;
  }

  .stat-item {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .stat-number {
    font-size: 2rem;
    font-weight: 900;
    font-family: var(--font-barlow);
    color: var(--palette-accent-cyan);
    line-height: 1;
  }

  .stat-label {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.6);
    font-family: var(--font-rubik);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .stat-divider {
    width: 1px;
    height: 40px;
    background: rgba(255, 255, 255, 0.2);
  }

  /* Skip link for accessibility */
  .skip-link {
    position: absolute;
    left: -9999px;
    z-index: 999;
    padding: 1rem;
    background: var(--palette-accent-cyan);
    color: var(--palette-brand-dark);
    text-decoration: none;
    font-weight: 700;
    border-radius: 4px;
  }

  .skip-link:focus {
    left: 50%;
    transform: translateX(-50%);
    top: 20px;
  }

  /* Decorative circles */
  .hero-decoration {
    position: absolute;
    inset: 0;
    pointer-events: none;
    overflow: hidden;
    z-index: 0;
  }

  .deco-circle {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.15;
    animation: float 20s ease-in-out infinite;
  }

  .deco-circle-1 {
    width: 600px;
    height: 600px;
    background: var(--palette-accent-cyan);
    top: -200px;
    left: -100px;
  }

  .deco-circle-2 {
    width: 500px;
    height: 500px;
    background: var(--palette-accent-purple);
    top: 100px;
    right: -150px;
    animation-delay: -5s;
  }

  .deco-circle-3 {
    width: 400px;
    height: 400px;
    background: var(--palette-accent-orange);
    bottom: -100px;
    left: 50%;
    transform: translateX(-50%);
    animation-delay: -10s;
  }

  @keyframes float {
    0%,
    100% {
      transform: translate(0, 0) scale(1);
    }
    33% {
      transform: translate(30px, -30px) scale(1.1);
    }
    66% {
      transform: translate(-30px, 30px) scale(0.9);
    }
  }

  /* Animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeInDown {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Responsive */
  @media (max-width: 768px) {
    .concursos-hero {
      min-height: 60vh;
    }

    .hero-container {
      padding: 40px 20px;
    }

    .hero-badge {
      font-size: 0.75rem;
      padding: 6px 16px;
      margin-bottom: 24px;
    }

    .hero-description {
      font-size: 1rem;
      margin-bottom: 36px;
    }

    .hero-stats {
      gap: 24px;
    }

    .stat-number {
      font-size: 1.5rem;
    }

    .stat-divider {
      display: none;
    }

    .deco-circle-1,
    .deco-circle-2,
    .deco-circle-3 {
      width: 300px;
      height: 300px;
    }
  }
</style>
