---
/**
 * ColaboracionCard Component
 * Tarjeta para mostrar colaboraciones destacadas con descripci√≥n
 */

export interface Props {
  title: string;
  description: string;
  imageUrl: string;
  altText: string;
  ctaLink: string;
  ctaText: string;
}

const { title, description, imageUrl, altText, ctaLink, ctaText } = Astro.props;
---

<article class="colaboracion-card">
  <div class="colaboracion-image-wrapper">
    <img
      src={imageUrl}
      alt={altText}
      class="colaboracion-image"
      width="400"
      height="300"
      loading="lazy"
    />
  </div>

  <div class="colaboracion-content">
    <h3 class="colaboracion-title">{title}</h3>
    <p class="colaboracion-description">{description}</p>
    <div class="colaboracion-footer">
      <a href={ctaLink} class="btn-primary text-sm px-3">
        {ctaText}
      </a>
    </div>
  </div>
</article>

<style>
  .colaboracion-card {
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    width: 100%;
    max-width: 320px;
    background: var(--palette-brand-dark, #011822);
    border-radius: 1rem;
    overflow: hidden;
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
  }

  .colaboracion-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 30px rgba(0, 0, 0, 0.4);
  }

  .colaboracion-image-wrapper {
    width: 100%;
    aspect-ratio: 4 / 3;
    overflow: hidden;
  }

  .colaboracion-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .colaboracion-card:hover .colaboracion-image {
    transform: scale(1.05);
  }

  .colaboracion-content {
    padding: 1rem;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .colaboracion-title {
    font-family: 'Impact', 'Arial Black', sans-serif;
    color: var(--palette-accent-orange, #f49624);
    font-weight: 400;
    font-size:1.4rem;
    margin: 0;
    line-height: 1.2;
  }

  .colaboracion-description {
    color: var(--palette-accent-orange);
    opacity:0.6;
    font-family:'Roboto';
    font-weight: 400;
    font-size: 0.625rem;
    margin: 0;
  }

  .colaboracion-footer {
    display: flex;
    justify-content: flex-end;
    margin-top: 0.5rem;
  }

  .colaboracion-description {
    font-size: clamp(0.8rem, 3vw, 0.875rem);
  }

  @media (max-width: 420px) {
    .colaboracion-cta {
      padding: 0.4rem 1rem;
    }
  }
</style>
