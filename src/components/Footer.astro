---
import LogoRevolucionDigital from '../assets/LogoFooter.svg';
import RevolucionDigitalText from '../assets/RevolucionDigitalFooter.svg';
---

<footer class="footer" role="contentinfo" aria-label="Footer">
  <div class="footer-bar">
    <div class="footer-content">
      <img
        src={LogoRevolucionDigital.src}
        alt="Revolución Digital"
        class="footer-logo"
      />
      <img
        src={RevolucionDigitalText.src}
        alt="Revolución Digital"
        class="footer-text"
      />
    </div>
  </div>
</footer>

<style>
  .footer {
    width: 100%;
    position: relative;
    isolation: isolate;
  }

  .footer-bar {
    width: 100%;
    height: clamp(120px, 20vw, 300px);
    background: linear-gradient(90deg, #4aedd1 0%, #0cc6f8 100%);
    clip-path: polygon(0 0, 100% 35%, 100% 100%, 0 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 -6px 24px rgba(11, 197, 247, 0.18);
  }

  /* Subtle texture overlay */
  .footer-bar::before {
    content: '';
    position: absolute;
    inset: 0;
    background-image: radial-gradient(
      circle,
      rgba(255, 255, 255, 0.03) 1px,
      transparent 1px
    );
    background-size: 16px 16px;
    opacity: 0.4;
    pointer-events: none;
    mix-blend-mode: overlay;
  }

  .footer-content {
    display: flex;
    gap: clamp(0.5rem, 1.5vw, 1.5rem);
    align-items: center;
    justify-content: center;
    z-index: 1;
    padding-top: clamp(0.5rem, 1.5vw, 1rem);
  }

  /* Logos scale aggressively with viewport */
  .footer-logo {
    height: clamp(36px, 8vw, 100px);
    width: auto;
    max-width: 138px;
    filter: drop-shadow(0 2px 8px rgba(0, 0, 0, 0.15));
    transition: transform 0.3s ease;
  }

  .footer-logo:hover {
    transform: scale(1.05);
  }

  .footer-text {
    height: clamp(28px, 6.5vw, 75px);
    width: auto;
    max-width: 222px;
    object-fit: contain;
    opacity: 0.98;
  }

  /* Tablet */
  @media (max-width: 1024px) {
    .footer-bar {
      height: clamp(100px, 18vw, 260px);
      clip-path: polygon(0 0, 100% 32%, 100% 100%, 0 100%);
    }

    .footer-logo {
      height: clamp(32px, 7vw, 85px);
    }

    .footer-text {
      height: clamp(24px, 5.5vw, 65px);
    }
  }

  /* Mobile */
  @media (max-width: 640px) {
    .footer-bar {
      height: clamp(85px, 22vw, 160px);
      clip-path: polygon(0 0, 100% 24%, 100% 100%, 0 100%);
    }

    .footer-content {
      gap: 0.5rem;
      padding: 0.5rem 1rem;
    }

    .footer-logo {
      height: clamp(28px, 6vw, 60px);
    }

    .footer-text {
      height: clamp(22px, 4.5vw, 48px);
    }
  }

  /* Extra small */
  @media (max-width: 375px) {
    .footer-bar {
      height: clamp(75px, 24vw, 130px);
      clip-path: polygon(0 0, 100% 20%, 100% 100%, 0 100%);
    }

    .footer-logo {
      height: clamp(24px, 5.5vw, 50px);
    }

    .footer-text {
      height: clamp(20px, 4vw, 42px);
    }
  }
</style>
