<style>
  .footer {
    width: 100%;
    position: relative;
    isolation: isolate;
    color: #041421;
    font-family: system-ui, sans-serif;
  }

  .footer-bar {
    width: 100%;
    background: linear-gradient(90deg, #4aedd1 0%, #0cc6f8 100%);
    clip-path: polygon(0 0, 100% 20%, 100% 100%, 0 100%);
    padding-top: 6rem;
    padding-bottom: 2rem;
    position: relative;
  }

  .footer-container {
    max-width: 1200px;
    margin: auto;
    padding: 0 1.5rem;
    display: grid;
    gap: 2rem;
  }

  /* Desktop Grid */
  @media (min-width: 768px) {
    .footer-container {
      grid-template-columns: 2fr 1fr 1fr 1fr;
    }
  }

  .footer-brand {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .footer-logo {
    width: 70px;
    height: auto;
  }

  .footer-text {
    width: 160px;
    height: auto;
  }

  .footer-description {
    opacity: 0.9;
    font-size: 0.9rem;
    max-width: 300px;
  }

  .footer-links,
  .footer-contact,
  .footer-social {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .footer-links h4,
  .footer-contact h4,
  .footer-social h4 {
    margin-bottom: 0.5rem;
    font-size: 1rem;
  }

  .footer a {
    color: #041421;
    text-decoration: none;
    opacity: 0.9;
    transition: all 0.2s ease;
    font-size: 0.9rem;
  }

  .footer a:hover {
    opacity: 1;
    transform: translateX(3px);
  }

  .social-icons {
    width: 100%;
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .social-icons a {
    background: rgba(255, 255, 255, 0.15);
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    font-weight: bold;
    transition: all 0.3s ease;
  }

  .social-icons a:hover {
    background: white;
    color: #0cc6f8;
    transform: translateY(-3px);
  }

  .footer-bottom {
    margin-top: 3rem;
    text-align: center;
    font-size: 0.8rem;
    opacity: 0.8;
  }
</style>
