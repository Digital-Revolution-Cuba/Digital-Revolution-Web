---
export interface Props {
  title: string;
  description: string;
  href?: string;
  logo?: string;
}

const { title, description, href = '#', logo } = Astro.props;
---

<article
  class="group relative rounded-2xl border border-white/10 bg-white/5 p-6 backdrop-blur-xl transition-all duration-300 hover:-translate-y-1 hover:border-indigo-500/40 hover:shadow-[0_0_40px_-10px_rgba(99,102,241,0.4)]"
>
  <div class="flex items-center gap-4">
    <div
      class="flex h-12 w-12 items-center justify-center rounded-xl bg-indigo-500/10 text-indigo-400"
    >
      {
        logo ? (
          <img src={logo} alt={`Logo`} class="h-6 w-auto" loading="lazy" />
        ) : (
          <span class="text-xs opacity-60">Logo</span>
        )
      }
    </div>
    <h3 class="text-lg font-semibold text-white">{title}</h3>
  </div>

  <p class="mt-4 text-sm leading-relaxed text-slate-300">
    {description}
  </p>

  <a
    href={href}
    class="mt-6 inline-flex items-center gap-2 text-sm font-medium text-indigo-400 transition-all group-hover:gap-3 group-hover:text-indigo-300"
  >
    Ver proyecto
    <span aria-hidden="true">â†’</span>
  </a>
</article>
