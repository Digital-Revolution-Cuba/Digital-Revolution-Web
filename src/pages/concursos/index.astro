        <div class="deco-circle deco-circle-3"></div>
      </div>
    </section>

    <!-- Active Contests -->
    {
      concursosActivos.length > 0 && (
        <section class="contests-section">
          <div class="section-header">
            <h2 class="section-title">
              <span class="title-icon">üî•</span>
