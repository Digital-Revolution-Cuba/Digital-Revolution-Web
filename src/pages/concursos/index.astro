</Layout>

<style>
  .concursos-page {
    min-height: 100vh;
    background: var(--palette-background);
    padding-top: 100px;
  }

  /* Hero Section */
  .hero-section {
    position: relative;
    max-width: 1200px;
    margin: 0 auto;
    padding: 80px 24px 120px;
    text-align: center;
    overflow: hidden;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 8px 20px;
    background: rgba(var(--palette-accent-cyan-rgb), 0.1);
    border: 1px solid rgba(var(--palette-accent-cyan-rgb), 0.3);
    border-radius: 50px;
    color: var(--palette-accent-cyan);
    font-size: 0.875rem;
    font-weight: 600;
    font-family: var(--font-barlow);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 32px;
    animation: fadeInDown 0.8s ease-out;
  }

  .hero-badge svg {
    animation: spin 3s linear infinite;
  }

  @keyframes spin {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  .hero-title {
    font-size: clamp(2.5rem, 8vw, 4.5rem);
    font-weight: 900;
    font-family: var(--font-saira);
    color: #fff;
    line-height: 1.1;
    margin: 0 0 24px;
    animation: fadeInUp 1s ease-out;
  }

  .gradient-text {
    background: linear-gradient(
      135deg,
      var(--palette-accent-cyan),
      var(--palette-accent-purple),
      var(--palette-accent-orange)
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: gradientShift 5s ease infinite;
    background-size: 200% 200%;
  }

  @keyframes gradientShift {
    0%,
    100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  .hero-description {
    font-size: 1.125rem;
    color: rgba(255, 255, 255, 0.8);
    max-width: 700px;
    margin: 0 auto 48px;
    line-height: 1.7;
    font-family: var(--font-rubik);
    animation: fadeInUp 1s ease-out 0.2s backwards;
  }

  .hero-stats {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 40px;
    flex-wrap: wrap;
    animation: fadeInUp 1s ease-out 0.4s backwards;
  }

  .stat-item {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .stat-number {
    font-size: 2rem;
    font-weight: 900;
    font-family: var(--font-barlow);
    color: var(--palette-accent-cyan);
    line-height: 1;
  }

  .stat-label {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.6);
    font-family: var(--font-rubik);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .stat-divider {
    width: 1px;
    height: 40px;
    background: rgba(255, 255, 255, 0.2);
  }

  /* Hero Decoration */
  .hero-decoration {
    position: absolute;
    inset: 0;
    pointer-events: none;
    overflow: hidden;
    z-index: -1;
  }

  .deco-circle {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.15;
    animation: float 20s ease-in-out infinite;
  }

  .deco-circle-1 {
    width: 600px;
    height: 600px;
    background: var(--palette-accent-cyan);
    top: -200px;
    left: -100px;
  }

  .deco-circle-2 {
    width: 500px;
    height: 500px;
    background: var(--palette-accent-purple);
    top: 100px;
    right: -150px;
    animation-delay: -5s;
  }

  .deco-circle-3 {
    width: 400px;
    height: 400px;
    background: var(--palette-accent-orange);
    bottom: -100px;
    left: 50%;
    transform: translateX(-50%);
    animation-delay: -10s;
  }

  @keyframes float {
    0%,
    100% {
      transform: translate(0, 0) scale(1);
    }
    33% {
      transform: translate(30px, -30px) scale(1.1);
    }
    66% {
      transform: translate(-30px, 30px) scale(0.9);
    }
  }

  /* Contests Section */
  .contests-section {
    max-width: 1400px;
    margin: 0 auto;
    padding: 60px 24px;
  }

  .section-header {
    text-align: center;
    margin-bottom: 60px;
  }

  .section-title {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 900;
    font-family: var(--font-saira);
    color: #fff;
    margin: 0 0 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 16px;
  }

  .title-icon {
    font-size: 1.2em;
  }

  .section-subtitle {
    font-size: 1.125rem;
    color: rgba(255, 255, 255, 0.7);
    margin: 0;
    font-family: var(--font-rubik);
  }

  .contests-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 32px;
  }

  /* CTA Section */
  .cta-section {
    max-width: 1200px;
    margin: 80px auto;
    padding: 60px 24px;
  }

  .cta-content {
    background: linear-gradient(
      135deg,
      rgba(var(--palette-accent-cyan-rgb), 0.1),
      rgba(var(--palette-accent-purple-rgb), 0.1)
    );
    border: 1px solid rgba(var(--palette-accent-cyan-rgb), 0.2);
    border-radius: 24px;
    padding: 60px 40px;
    text-align: center;
    backdrop-filter: blur(10px);
  }

  .cta-title {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 900;
    font-family: var(--font-barlow);
    color: #fff;
    margin: 0 0 16px;
  }

  .cta-description {
    font-size: 1.125rem;
    color: rgba(255, 255, 255, 0.8);
    margin: 0 0 32px;
    font-family: var(--font-rubik);
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    padding: 16px 32px;
    background: linear-gradient(
      135deg,
      var(--palette-accent-cyan),
      var(--palette-accent-blue)
    );
    color: var(--palette-brand-dark);
    font-size: 1rem;
    font-weight: 700;
    font-family: var(--font-barlow);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    text-decoration: none;
    border-radius: 12px;
    transition: all 0.3s ease;
    box-shadow: 0 8px 20px rgba(var(--palette-accent-cyan-rgb), 0.3);
  }

  .cta-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 12px 30px rgba(var(--palette-accent-cyan-rgb), 0.4);
  }

  .cta-button svg {
    transition: transform 0.3s ease;
  }

  .cta-button:hover svg {
    transform: translateX(4px);
  }

  /* Animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeInDown {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Responsive */
  @media (max-width: 768px) {
    .concursos-page {
      padding-top: 80px;
    }

    .hero-section {
      padding: 40px 20px 80px;
    }

    .hero-stats {
      gap: 24px;
    }

    .stat-divider {
      display: none;
    }

    .contests-grid {
      grid-template-columns: 1fr;
      gap: 24px;
    }

    .cta-content {
      padding: 40px 24px;
    }

    .section-title {
      flex-direction: column;
      gap: 8px;
    }
  }
</style>
