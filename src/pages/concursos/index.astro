---
import { getCollection } from 'astro:content';
import ConcursoCardModern from '../../components/ConcursoCardModern.astro';
import Layout from '../../layouts/Layout.astro';

// Get all contests from the collection
const allConcursos = await getCollection('concursos');

// Sort by featured first, then by status
const concursosOrdenados = allConcursos.sort((a, b) => {
  // Featured first
  if (a.data.featured && !b.data.featured) return -1;
  if (!a.data.featured && b.data.featured) return 1;

  // Then by status priority
  const statusPriority: Record<string, number> = {
    activo: 1,
    proximo: 2,
    finalizado: 3,
    cerrado: 4,
  };

  return statusPriority[a.data.status] - statusPriority[b.data.status];
});

// Separate active and upcoming from finished
const concursosActivos = concursosOrdenados.filter(
  (c) => c.data.status === 'activo' || c.data.status === 'proximo',
);
const concursosFinalizados = concursosOrdenados.filter(
  (c) => c.data.status === 'finalizado' || c.data.status === 'cerrado',
);
---

<Layout
