    "lint-staged": "lint-staged"
  },
  "dependencies": {
    "@astrojs/react": "^4.4.2",
    "@astrojs/sitemap": "^3.7.0",
    "@astrojs/vercel": "^9.0.4",
    "@tailwindcss/vite": "^4.1.18",
    "@vercel/analytics": "^1.6.1",
    "@vercel/speed-insights": "^1.3.1",
    "astro": "^5.16.6",
    "lucide-react": "^0.563.0",
    "nanostores": "^1.1.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-measure": "^2.5.2",
    "react-responsive-masonry": "^2.7.1",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.6",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/react-measure": "^2.0.12",
    "@types/react-responsive-masonry": "^2.7.0",
    "astro-compress": "^2.3.9",
    "husky": "^9.1.7",
    "lightningcss": "^1.30.2",
    "lint-staged": "^15.5.2",
    "prettier": "^3.7.4",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "sharp": "^0.34.5",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{js,ts,mjs,cjs,jsx,tsx}": ["prettier --write"],
    "*.astro": ["prettier --write"],
    "*.{css,json,md,yml,yaml}": ["prettier --write"]
  }
